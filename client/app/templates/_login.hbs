<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <a href="/auth/google"   class="btn btn-primary btn-lg active">Sign In with Google</a>
      <a href="/auth/twitter"  class="btn btn-primary btn-lg active">Sign In with Twitter</a>
      <a href="/auth/facebook" class="btn btn-primary btn-lg active">Sign In with Facebook</a>

      <form action="/login" method="post" role="form">
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="text" id="email" name="email"/>
        </div>
        <div class="form-group">
          <label for="passwd">Password:</label>
          <input type="passwd" name="passwd"/>
        </div>
        <div class="form-group">
          <input type="submit" value="Log In" class="btn btn-default"/>
        </div>
      </form>
    </div>
  </div>
</div>